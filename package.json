{
    "name": "igloo-graphql",
    "version": "0.1.0",
    "description": "Backend for the igloo platform",
    "scripts": {
        "dev": "nodemon ./server.js --exec babel-node -e js,graphql,env",
        "start": "node ./build/server.js",
        "prestart": "npm run build",
        "build":
            "babel server.js app.js -d build && babel postgresql -d build/postgresql && babel graphql -d build/graphql",
        "setupDatabase": "node ./postgresql/setup.js",
        "test": "jest --coverage --bail --forceExit",
        "pretest": "npm run setupDatabase",
        "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hellowitlab/iglooQL"
    },
    "keywords": [],
    "author": "Igloo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hellowitlab/iglooQL/issues"
    },
    "homepage": "https://github.com/hellowitlab/iglooQL",
    "dependencies": {
        "apollo-server-express": "^1.0.2",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "6.5.0",
        "babel-preset-es2015": "6.5.0",
        "babel-preset-react": "^6.5.0",
        "babel-preset-stage-0": "6.5.0",
        "babel-runtime": "^6.26.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.17.2",
        "chalk": "^2.3.0",
        "cors": "^2.8.4",
        "coveralls": "^3.0.0",
        "dotenv": "^4.0.0",
        "express": "4.13.4",
        "express-jwt": "^5.3.0",
        "graphql-playground-middleware-express": "^1.3.6",
        "graphql-subscriptions": "^0.5.5",
        "graphql-tools": "^1.0.0",
        "graphql-tools-types": "^1.1.12",
        "javascript-fortuna": "^1.0.8",
        "jwt-simple": "^0.5.1",
        "moment": "^2.19.2",
        "otp.js": "^1.1.0",
        "passport": "^0.4.0",
        "pg": "g.4.1",
        "pg-hstore": "^2.3.2",
        "sequelize": "^4.22.8",
        "subscriptions-transport-ws": "^0.9.4"
    },
    "devDependencies": {
        "graphql": "^0.11.7",
        "graphql-tag": "^2.6.1",
        "graphql-tester": "^0.0.5",
        "jest": "^21.2.1",
        "minimal-graphql": "^1.0.3",
        "nodemon": "^1.12.1",
        "supertest": "^3.0.0"
    },
    "peerDependencies": {
        "graphql": "^0.11.7"
    }
}
